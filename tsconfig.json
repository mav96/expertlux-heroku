{
    "filesGlob": [
        "typings/index.d.ts",
        "definitions/**/*.d.ts",
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "build",
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    }
}